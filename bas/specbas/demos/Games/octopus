ZXASCII
AUTO -1
PROG octopus
10 LET a$="j"#20#1#34#20#0"g"
20 LET b$="g j"
30 LET k=INT(RND*(SCRw/2))+1
40 LET l=INT(RND*(SCRh/2))+1
50 LET c$="mpm"
60 LET g=INT(RND*(SCRw/2))
70 LET h=INT(RND*(SCRh/2))+1
80 GO TO 250
90 PRINT MOVE h,g;c$;MOVE l,k;a$
100 PRINT MOVE l,k+FONTh;b$
110 PRINT AT 0,0;"SCORE=";score;"    ": WAIT SCREEN 
120 IF l>=h-(FONTw*3) AND l<h+(3*FONTw) AND k>g-FONTh*2 AND k<=g+FONTh THEN STOP 
130 IF g>k THEN LET k=k+1
140 IF l>h THEN LET l=l-1
150 IF k>g THEN LET k=k-1
160 IF h>l THEN LET l=l+1
170 IF KEYST KEY_LEFT AND h>0 THEN LET h=h-dd
180 IF KEYST KEY_RIGHT AND h<SCRw-(FONTw*3) THEN LET h=h+dd
190 IF KEYST KEY_DOWN AND g<SCRh-FONTh THEN LET g=g+dd
200 IF KEYST KEY_UP AND g>0 THEN LET g=g-dd
210 CLS 
220 LET score=score+1
230 IF score MOD 150=0 THEN LET dd=dd*0.75
240 GO TO 90
250 LET score=0
260 LET dd=2
270 GO TO 90

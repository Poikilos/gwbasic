ZXASCII
AUTO -1
PROG curlicue2
10 PALETTE 0,128,128,128: FOR f=1 TO 255: PALETTE f,(f*8) MOD 255,0,0: NEXT f: PAPER 0: CLS 
20 PAUSE 1
30 LET x=SCRw/2
40 LET y=SCRh/2
50 LET seed=RND
60 LET df=0
70 LET f=0
80 LET i=0
90 LET df=df+seed*2*PI
100 LET f=f+df
110 LET x=x+COS f
120 LET y=y+SIN f
130 IF x<SCRw AND y<SCRh AND x>0 AND y>0 THEN PLOT INK MIN(POINT(x,y)+1,255);x,y
140 LET i=i+0.1
150 IF INKEY$="" THEN GO TO 90
160 CLS 
170 RUN 

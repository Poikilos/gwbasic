ZXASCII
AUTO -1
PROG points_extra
10 REM points demo
20 RADIANS: PAPER 0: INK 10: CLS 
25 DIM p((SCRh/4)*SCRw,3): LET i=1: LET sw=SCRw/2: LET sh=SCRh/2
30 FOR j=SCRh TO 80 STEP -4
40 FOR m=1 TO SCRw
50 LET y=INT(SCRh/2+240*(COS(m*PI/j)))
60 LET p(i,1)=m-sw: LET p(i,2)=y-sh: LET p(i,3)=j MOD 255: INC i
70 NEXT m
80 NEXT j
90 DEGREES: LET angle=0: SCREEN LOCK 
100 TRANSFORM2D p() TO d() ROTATE angle MOVE sw,sh
110 PLOT d()
120 WAIT SCREEN 
130 INC angle,1,0 TO 359
140 CLS 
150 GO TO 100

100 REM INPUT "HOW MANY LINES? ";N
105 LET N=20
110 DIM CX(4),CY(4)
115 DIM LX(4,N),LY(4,N)
120 CLS:SCREEN 9
140 FOR I=1 TO 4
145 READ CX(I),CY(I)
150 NEXT I
160 DATA 100,50, 600,50, 300,300, 250,300
170 REM PSET (CX(4),CY(4))
175 LINE (CX(4),CY(4))-(CX(1),CY(1))
180 FOR I=2 TO 4
181 REM LINE -(CX(I),CY(I))
185 LINE (CX(I),CY(I))-(CX(I-1),CY(I-1))
190 NEXT I
210 FOR I=1 TO N
220 LET LX(1,I)=CX(1)+(CX(2)-CX(1))*I/N
230 LET LY(1,I)=CY(1)+(CY(2)-CY(1))*I/N
240 NEXT I
250 FOR I=1 TO N
260 LET LX(3,I)=CX(4)+(CX(3)-CX(4))*I/N
270 LET LY(3,I)=CY(4)+(CY(3)-CY(4))*I/N
280 NEXT I
290 FOR I=1 TO N
300 LET LX(2,I)=CX(2)+(CX(3)-CX(2))*I/N
310 LET LY(2,I)=CY(2)+(CY(3)-CY(2))*I/N
320 NEXT I
330 FOR I=1 TO N
340 LET LX(4,I)=CX(1)+(CX(4)-CX(1))*I/N
350 LET LY(4,I)=CY(1)+(CY(4)-CY(1))*I/N
360 NEXT I
400 REM DRAW
410 LET ROW=1:GOSUB 500
420 LET ROW=2:GOSUB 500
430 STOP
500 REM SUBROUTINE
510 FOR I=1 TO N
520 REM PSET (LX(ROW,I),LY(ROW,I))
530 LINE (LX(ROW+2,I),LY(ROW+2,I))-(LX(ROW,I),LY(ROW,I))
535 REM LINE -(LX(ROW+2,I),LY(ROW+2,I))
540 NEXT I

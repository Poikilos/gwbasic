DECLARE SUB EB1100 ()
DECLARE SUB EB2200 ()
DECLARE SUB EB3290 ()
DECLARE SUB EB4220 ()


INICIO:

SCREEN 0
CLS

REM PROGRAMA GRAFICO
PRINT "PROGRAMA GRAFICO"
PRINT "================"
PRINT
PRINT "ESCOLHA UM:"
PRINT "000 - SAIR DO PROGRAMA"
PRINT "100 - RETA"
PRINT "200 - CICLOIDE"
PRINT "290 - CRUCIFORME"
PRINT "220 - HIPOCICLOIDE"
INPUT "> ", RESP

REM 1 OU 2, 7,8,9
     
SCREEN 7
REM CLS
    
SELECT CASE RESP

    CASE 100
        CALL EB1100

    CASE 200
        CALL EB2200

    CASE 290
        CALL EB3290

    CASE 220
        CALL EB4220

    CASE 0
        END

    CASE ELSE
        PRINT "INVALIDO"
        GOTO INICIO

END SELECT

INPUT "TECLE ALGO PARA CONTINUAR...", RESP$


GOTO INICIO

SUB EixoH

REM EIXO HORIZONTAL
DIM H
FOR H = 0 TO 257
    PSET (H, 100), 1
NEXT H

END SUB

SUB EixoV

REM EIXO VERTICAL
DIM V
FOR V = 0 TO 200
    PSET (128, V), 2
NEXT V

END SUB


SUB EB1100
 
DIM V
DIM H
DIM X
DIM Y
    
CALL EixoH
CALL EixoV
    
REM RETA
FOR X = -100 TO 60
    Y = X + 30

    V = 100 - Y
    H = 128 + X
    PSET (H, V), 14
NEXT X
    
END SUB

SUB EB2200
 
DIM V
DIM H
DIM X
DIM Y
DIM T
DIM M
    
CALL EixoH
CALL EixoV
    
REM CICLOIDE
FOR T = 0 TO 6.28 STEP .05
    M = SIN(T)
    X = 40 * (T - M)
    Y = 40 * (1 - COS(T))

    V = 100 - Y
    H = X
    PSET (H, V), 14
NEXT T

END SUB

SUB EB3290
 
DIM V
DIM H
DIM X
DIM Y
DIM T
DIM M
DIM A
DIM R

CALL EixoH
CALL EixoV

REM CRUCIFORME
FOR A = 0 TO 6.28 STEP .025

    IF A > 0 AND A < .05 THEN GOTO CONT
    IF A > .735 AND A < .835 THEN GOTO CONT
    IF A > 1.45 AND A < 1.67 THEN GOTO CONT
    IF A > 2.305 AND A < 2.405 THEN GOTO CONT
    IF A > 3.0 AND A < 3.24 THEN GOTO CONT
    IF A > 3.875 AND A < 3.975 THEN GOTO CONT
    IF A > 4.6 AND A < 4.76 THEN GOTO CONT
    IF A > 5.445 AND A < 5.545 THEN GOTO CONT
    IF A > 6.175 AND A < 6.28 THEN GOTO CONT
    IF SIN(2 * A) = 0 THEN GOTO CONT

    R = 15 / SIN(2 * A)
    H = 128 + R * COS(A)
    V = 100 + R * SIN(A)
    PSET (H, V), 14

    CONT:
    REM NAO FAZ NADA
NEXT A
    
END SUB

SUB EB4220
    
DIM V
DIM H
DIM X
DIM Y
DIM T

    
REM HIPOCICLOIDE
FOR T = 0 TO 12.56 STEP .05
    X = 30 * COS(T) + 20 * COS(1.5 * T)
    Y = 30 * SIN(T) - 20 * SIN(1.5 * T)

    V = 100 - Y
    H = 128 + X
    PSET (H, V), 2
NEXT T

END SUB

